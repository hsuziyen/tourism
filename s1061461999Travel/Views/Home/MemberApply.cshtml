    @if (dataFlag)
    {
        <h2>註冊資料如下:</h2>
        <table class="table table-condensed">
            <tr>
                <td>帳號:</td>
                <td>
                    @ViewBag.account
                </td>
            </tr>
            <tr>
                <td>密碼:</td>
                <td>
                    @ViewBag.password
                </td>
            </tr>
            <tr>
                <td>姓名:</td>
                <td>
