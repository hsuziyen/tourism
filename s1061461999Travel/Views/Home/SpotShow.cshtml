@model s1061461999Travel.Models.ViewModels.SpotView
@{
    ViewBag.Title = "SpotShow";
    Layout = "~/Views/Shared/_TravelLayout.cshtml";
    int i = 0, j = 0, k = 0;

}

<div class="container text-muted">
    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var data in Model.Images)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleCaptions" data-slide-to="@i"></li>
                    }
                    i++;
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var data in Model.Images)
                {

                    if (j == 0)
                    {
                        <div class="carousel-item active">
                            <img src="~/Images/@data.ImageName" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                @*<h5>@data.ImageName</h5>*@
                                @*<p>@data.Description</p>*@
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="~/Images/@data.ImageName" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                @*<h5>@data.ImageName</h5>*@
                                @*<p>@data.Description</p>*@
                            </div>
                        </div>
                    }
                    j++;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-primary">@Model.SpotItem.SpotName 景點介紹</h2>
            <p class="text-left">
                @Model.SpotItem.Description
            </p>
            <table class="table table-condensed">
                <tr>
                    <th>電話</th>
                    <th>地址</th>
                    <th></th>
                </tr>
                <tr>
                    <td>@Model.SpotItem.Telephone</td>
                    <td>@Model.SpotItem.Address</td>
                    <td>
                        <a href="https://www.google.com.tw/maps/place/@Model.SpotItem.Address" target="_blank">
                            Google Map
                        </a>
                    </td>
                </tr>
            </table>
        </div>
        <div class="row">
            @foreach (var data in Model.Images)
            {
                if (k % 2 == 0)
                {
                    <div class="col-md-8 my-3">
                        <img src="~/Images/@data.ImageName" class="img-thumbnail" />
                    </div>
                    <div class="col-md-4 text-left my-3">
                        @Html.Raw(data.Description.Replace(Environment.NewLine,"<br/>"))
                    </div>
                }
                else
                {
                    <div class="col-md-4 text-left my-3">
                        @Html.Raw(data.Description.Replace(Environment.NewLine,"<br/>"))
                    </div>
                    <div class="col-md-8 my-3">
                        <img src="~/Images/@data.ImageName" class="img-thumbnail" />
                    </div>
                }
                k++;

            }

        </div>
    </div>

</div>

