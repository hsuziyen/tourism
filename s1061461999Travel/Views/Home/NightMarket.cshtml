@model s1061461999Travel.Models.NightMarket
@{
    ViewBag.Title = "NightMarket";
    Layout = "~/Views/Shared/_TravelLayout.cshtml";
    bool dataFlag = false;
    dataFlag = !string.IsNullOrEmpty(ViewBag.Name);
}

<div class="container text-muted text-center">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center">夜市推薦<span class="text-danger mx-3">@TempData["Msg"]</span></h2>
            @using (Html.BeginForm("NightMarket", "Home", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @*<div class="form-group row">
                @Html.LabelFor(model => model.Id, new { @class = "col-sm-2 form-control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
                </div>
                <div class="col-sm-2 text-danger">
                    @Html.ValidationMessageFor(model => model.Id)
                </div>
            </div>*@
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control",@placeholder="請輸入夜市名稱" })
                    </div>
                    <div class="col-sm-2 text-danger">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Tel, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Tel, new { @class = "form-control", type = "Tel" })
                    </div>
                    <div class="col-sm-2 text-danger">
                        @Html.ValidationMessageFor(model => model.Tel)
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Address, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2 text-danger">
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>
                </div>

                <div class="form-group row">
                    @Html.Label("Photo", new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-8">
                        @Html.TextBox("photo", string.Empty, new { @class = "form-control", type = "file" })
                    </div>
                    <div class="col-sm-2 text-danger">
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows="8" })
                    </div>
                    <div class="col-sm-2 text-danger">
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input type="submit" class="btn btn-outline-primary" value="送出">
                    </div>
                    <div class="col-sm-2"></div>
                </div>
            }
        </div>
    </div>

    @if (dataFlag)
    {
    <div class="col-md-8 offset-md-2">
        <div class="card mb-3 w-100">
            <img src="~/Images/Upload/@Model.Photo" class="card-img-top" alt="...">           
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text text-left">
                    @Html.Raw(@Model.Description.Replace(Environment.NewLine,"<br/>"))
                </p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
            <div class="card-footer text-muted">
                <h4>地址:@Model.Address</h4>
                <h4>電話:@Model.Tel</h4>
            </div>
        </div>
    </div>
    }

</div>

